{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-kill",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "**/*"
        },
        {
          "path": "/**/*"
        }
      ]
    }
  ]
}